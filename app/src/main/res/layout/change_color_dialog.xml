<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/_8sdp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/_12sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:gravity="center_horizontal"
        android:text="Me DIARY"
        android:textSize="@dimen/_14ssp" />
    <TextView
        android:id="@+id/imgDone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_14sdp"
        android:layout_marginEnd="@dimen/_14sdp"
        android:gravity="center_horizontal"
        android:layout_marginTop="@dimen/_8sdp"
        android:paddingBottom="@dimen/_8sdp"
        android:text="Customize app as you like with other color options available"
        android:src="@drawable/tick"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey"
        android:layout_marginTop="@dimen/_10sdp"/>
    <TextView
        android:id="@+id/tvYes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="Yes, sure"
        android:textColor="#2a00ff"
        android:padding="@dimen/_12sdp"
        android:textSize="@dimen/_16ssp" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey"/>
    <TextView
        android:id="@+id/tvOkay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="No,its okay"
        android:textColor="#2a00ff"
        android:padding="@dimen/_12sdp"
        android:textSize="@dimen/_16ssp" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey"/>
    <TextView
        android:id="@+id/tvDontRequired"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="Don't required"
        android:textColor="#2a00ff"
        android:padding="@dimen/_12sdp"
        android:textSize="@dimen/_16ssp" />
</LinearLayout>